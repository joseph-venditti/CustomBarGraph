<resources>
    <declare-styleable name="CustomBarGraph">

        <!-- The height of the bar -->
        <attr name="barHeight" format="dimension" />

        <!-- Base color of the bar (the portion that is not filled) -->
        <attr name="baseColor" format="color" />

        <!-- Fill color of the corner overlay -->
        <attr name="cornerOverlayColor" format="color" />

        <!-- Fill color of the scale lines -->
        <attr name="scaleLineColor" format="color" />

        <!-- The height of each scale line (if provided) -->
        <attr name="scaleLineHeight" format="dimension" />

        <!-- The width of each scale line (if provided) -->
        <attr name="scaleLineWidth" format="dimension" />

        <!-- The top padding of each scale line (if provided) -->
        <attr name="scaleLineTopPadding" format="dimension" />

        <!-- How often the scale line should repeat (min 1, max 100) -->
        <attr name="scaleLineRepeatPercentage" format="integer" />

        <!-- If you should hide the start line -->
        <attr name="scaleHideStartLine" format="boolean" />

        <!-- If you should hide the end line -->
        <attr name="scaleHideEndLine" format="boolean" />

        <!-- If you should show line percentages (based off the max value) -->
        <attr name="scaleShowLinePercentages" format="boolean" />

    </declare-styleable>
</resources>