<resources>
    <declare-styleable name="CustomBarGraph">

        <!-- The height or (thickness) of the bar -->
        <attr name="barHeight" format="dimension" />

        <!-- Base color of the bar (the portion that is not filled) -->
        <attr name="baseColor" format="color" />

        <!-- Fill colors for the different bars -->
        <attr name="fillColor1" format="color" />
        <attr name="fillColor2" format="color" />
        <attr name="fillColor3" format="color" />
        <attr name="fillColor4" format="color" />
        <attr name="fillColor5" format="color" />

        <!-- Fill color of the corner overlay -->
        <attr name="cornerOverlayColor" format="color" />

    </declare-styleable>
</resources>