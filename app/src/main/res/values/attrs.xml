<resources>
    <declare-styleable name="CustomBarGraph">

        <!-- The height of the bar -->
        <attr name="barHeight" format="dimension" />

        <!-- Base color of the bar (the portion that is not filled) -->
        <attr name="baseColor" format="color" />

        <!-- Fill color of the corner overlay -->
        <attr name="cornerOverlayColor" format="color" />

        <!-- Fill color of the scale lines -->
        <attr name="scaleLineColor" format="color" />

        <!-- The height of each scale line (if provided) -->
        <attr name="scaleLineHeight" format="dimension" />

        <!-- The width of each scale line (if provided) -->
        <attr name="scaleLineWidth" format="dimension" />

        <!-- The top padding of each scale line (if provided) -->
        <attr name="scaleLineTopPadding" format="dimension" />

        <!-- The bottom padding of each scale line (if provided) -->
        <attr name="scaleLineBottomPadding" format="dimension" />

        <!-- How often the scale line should repeat (min 1, max 100) -->
        <attr name="scaleLineRepeatPercentage" format="integer" />

        <!-- If you should hide the start line -->
        <attr name="scaleHideStartLine" format="boolean" />

        <!-- If you should hide the end line -->
        <attr name="scaleHideEndLine" format="boolean" />

        <!-- If you should show line percentages (based off the max value) -->
        <attr name="scaleShowLinePercentages" format="boolean" />

        <!-- The text size of the line percentage labels (if provided) -->
        <attr name="scaleLinePercentageTextSize" format="dimension" />

        <!-- The text color of the line percentage labels (if provided) -->
        <attr name="scaleLinePercentageTextColor" format="color" />

        <!-- If you should show primary labels -->
        <attr name="showPrimaryLabels" format="boolean" />

        <!-- If you should show secondary labels -->
        <attr name="showSecondaryLabels" format="boolean" />

        <!-- The text size of the primary labels (if provided) -->
        <attr name="primaryLabelTextSize" format="dimension" />

        <!-- The text color of the primary labels (if provided) -->
        <attr name="primaryLabelTextColor" format="color" />

        <!-- The top padding of the primary labels (if provided) -->
        <attr name="primaryLabelTopPadding" format="dimension" />

        <!-- The bottom padding of the primary labels (if provided) -->
        <attr name="primaryLabelBottomPadding" format="dimension" />

        <!-- The text size of the secondary labels (if provided) -->
        <attr name="secondaryLabelTextSize" format="dimension" />

        <!-- The text color of the secondary labels (if provided) -->
        <attr name="secondaryLabelTextColor" format="color" />

        <!-- The top padding of the secondary labels (if provided) -->
        <attr name="secondaryLabelTopPadding" format="dimension" />

        <!-- The bottom padding of the secondary labels (if provided) -->
        <attr name="secondaryLabelBottomPadding" format="dimension" />

    </declare-styleable>
</resources>