<resources>
    <declare-styleable name="CustomBarGraph">

        <!-- The height of the bar -->
        <attr name="barHeight" format="dimension" />

        <!-- Base color of the bar (the portion that is not filled) -->
        <attr name="baseColor" format="color" />

        <!-- Fill color of the corner overlay -->
        <attr name="cornerOverlayColor" format="color" />

        <!-- Fill color of the scale -->
        <attr name="scaleMarkerColor" format="color" />

        <!-- The height of each scale marker (if provided) -->
        <attr name="scaleMarkerHeight" format="dimension" />

        <!-- The width of each scale marker (if provided) -->
        <attr name="scaleMarkerWidth" format="dimension" />

        <!-- The top padding of each scale marker (if provided) -->
        <attr name="scaleMarkerTopPadding" format="dimension" />

        <!-- How often the scale marker should repeat (value between 1-100) -->
        <attr name="scaleMarkerRepeatPercentage" format="integer" />

        <!-- If you should hide the start line -->
        <attr name="scaleMarkerHideStartLine" format="boolean" />

        <!-- If you should hide the end line -->
        <attr name="scaleMarkerHideEndLine" format="boolean" />

    </declare-styleable>
</resources>