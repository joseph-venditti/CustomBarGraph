<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="ca.jmdv.bargraphtester.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <ca.jmdv.bargraphtester.views.CustomBarGraph
            android:id="@+id/barGraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingBottom="@dimen/paddingTop"
            android:paddingLeft="@dimen/paddingHorizontal"
            android:paddingRight="@dimen/paddingHorizontal"
            android:paddingTop="@dimen/paddingTop"
            custom:barHeight="@dimen/barHeight"
            custom:baseColor="@color/colorGrey_200"
            custom:cornerOverlayColor="@color/colorWhite"
            custom:scaleHideEndLine="true"
            custom:scaleHideStartLine="true"
            custom:scaleLineBottomPadding="@dimen/scaleLineBottomPadding"
            custom:scaleLineColor="@color/colorGrey_300"
            custom:scaleLineHeight="@dimen/scaleLineHeight"
            custom:scaleLinePercentageTextColor="@color/colorGrey_500"
            custom:scaleLinePercentageTextSize="@dimen/scaleLinePercentageTextSize"
            custom:scaleLineRepeatPercentage="@integer/scaleLineRepeatPercentage"
            custom:scaleLineTopPadding="@dimen/scaleLineTopPadding"
            custom:scaleLineWidth="@dimen/scaleLineWidth"
            custom:scaleShowLinePercentages="true" />

    </LinearLayout>

</RelativeLayout>
